{
    "name": "shippie",
    "version": "0.20.0",
    "description": "an extensible code review agent",
    "type": "module",
    "bin": {
        "shippie": "./dist/index.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mattzcarey/shippie"
    },
    "scripts": {
        "start": "bun run ./src/index.ts",
        "review": "bun run ./src/index.ts review",
        "configure": "bun run ./src/index.ts configure",
        "ui": "bun run ./src/index.ts ui",
        "test:e2e": "bun test src/specs/scenarios.test.ts --concurrent",
        "test:unit": "bun test review configure common src/specs/runner src/specs/utils",
        "build": "bun run build:ui && tsdown",
        "build:ui": "cd src/ui/web && bun install && bun run build",
        "build:cli": "tsdown",
        "publish:build": "bun run build && bun publish --access public",
        "check": "biome check .",
        "check:types": "tsc --noEmit",
        "check:fix": "biome check . --fix",
        "check:fix:unsafe": "biome check . --unsafe --fix"
    },
    "keywords": [
        "code-review",
        "shippie",
        "review",
        "model-context-protocol",
        "mcp",
        "chatgpt",
        "gpt",
        "openai",
        "anthropic",
        "sonnet 4",
        "claude code",
        "grok",
        "perplexity",
        "gpt-4.1",
        "huggingface",
        "ai",
        "genai",
        "sonnet"
    ],
    "author": "Matt Carey",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@actions/github": "^5.1.1",
        "@ai-sdk/anthropic": "^1.2.10",
        "@ai-sdk/azure": "^1.3.22",
        "@ai-sdk/google": "^1.2.11",
        "@ai-sdk/openai": "^1.3.12",
        "@hono/node-server": "^1.13.7",
        "@inquirer/prompts": "^3.0.4",
        "ai": "^4.3.15",
        "dotenv": "^16.3.1",
        "gray-matter": "^4.0.3",
        "hono": "^4.10.6",
        "octokit": "^3.1.0",
        "open": "^11.0.0",
        "picocolors": "^1.1.1",
        "picomatch": "^4.0.2",
        "tinyglobby": "^0.2.10",
        "tslog": "^4.8.2",
        "ulid": "^3.0.0",
        "yargs": "^17.7.2",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.7",
        "@types/bun": "^1.1.16",
        "@types/picomatch": "^4.0.0",
        "@types/yargs": "^17.0.33",
        "autoevals": "^0.0.127",
        "tsdown": "^0.16.6",
        "typescript": "^5.1.6"
    },
    "files": [
        "dist/**/*"
    ]
}
